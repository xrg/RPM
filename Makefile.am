	@rm -f $(DESTDIR)$(bindir)/rpmquery
	@rm -f $(DESTDIR)$(bindir)/rpmsign
	@rm -f $(DESTDIR)$(bindir)/rpmverify
	@rm -f $(DESTDIR)$(bindir)/rpmdb

